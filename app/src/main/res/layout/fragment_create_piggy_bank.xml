<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apelido">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Moeda"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cg_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_brl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checkable="true"
            android:text="BRL"
            app:chipIcon="@drawable/ic_brazil" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_usd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checkable="true"
            android:text="USD"
            app:chipIcon="@drawable/ic_eua" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_eur"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checkable="true"
            android:text="EUR"
            app:chipIcon="@drawable/ic_euro" />

    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            app:tint="@color/onVaultsBackground"
            android:padding="4dp"
            android:src="@drawable/ic_hammer"
            android:layout_width="22dp"
            android:layout_height="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quebrar"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="4dp"
        android:paddingHorizontal="4dp"
        android:id="@+id/btn_date_to_break"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_date_button"
        android:drawableStart="@drawable/ic_edit_calendar"
        android:drawablePadding="4dp"
        android:text="Indefinido"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textColor="@color/onVaultsBackground"
        app:drawableTint="@color/onVaultsBackground" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_vault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:enabled="false"
        android:text="Criar"
        android:textSize="16sp"
        app:icon="@drawable/ic_add_vector" />

</LinearLayout>