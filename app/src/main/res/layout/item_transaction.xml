<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/bg_piggy_bank_card_solid"
        android:elevation="4dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.SummationView.Value.Total"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:text="R$ 0,00" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="2dp"
            android:src="@drawable/ic_hammer"
            app:layout_constraintBottom_toBottomOf="@+id/tv_date_to_break"
            app:layout_constraintEnd_toStartOf="@+id/tv_date_to_break"
            app:layout_constraintTop_toTopOf="@+id/tv_date_to_break"
            app:tint="?attr/colorOnPrimary" />

        <TextView
            android:id="@+id/tv_date_to_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="date here" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>